{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node", "vite/client"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react-jsx",         // <-- wichtig!
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
